        <description>If we fill in the 4th Approver .. open up the fifth</description>
        <field>wave1_approver_4</field>
        <global>true</global>
        <messages/>
        <name>Wave1 Approver4  Change</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '') {
      return;
   }

	var vW1Appr4 = g_form.getValue('wave1_approver_4');
	
	//If Wave Approver 4 is entered .. then display approver 5
	//    then display the next Capex pair
	if (vW1Appr4 == ' ') {
		g_form.setDisplay('wave1_approver_5', false);
	} else {
		g_form.setDisplay('wave1_approver_5', true);
	}
   
}]]></script>
